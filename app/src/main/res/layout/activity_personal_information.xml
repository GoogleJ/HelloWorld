<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_headPortrait"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#272E3F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_DuoDuoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#6D7278"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6D7278"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_line10" />

    <RelativeLayout
        style="@style/RLayoutStyle"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_personalizedSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/personalized"
            android:textColor="#272E3F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/tv_personalizedSignature"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#6D7278"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_source"
        style="@style/RLayoutStyle"
        android:visibility="gone">
        <include layout="@layout/layout_line" />
        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="来源"
            android:textColor="#272E3F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_into_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/tv_source"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#6D7278"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_transcript"
        style="@style/RLayoutStyle"
        android:visibility="gone">
        <include layout="@layout/layout_line" />
        <TextView
            android:id="@+id/tv_transcript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="发言记录"
            android:textColor="#272E3F"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_end" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_addAddressBook"
        style="@style/BtnStyle"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/m_personal_information_signature_text" />

</LinearLayout>