<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/send_red_packet_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_red_packet_user"
    android:orientation="vertical"
    tools:ignore="all">

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="14dp">

        <TextView
            android:id="@+id/remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/m_red_envelopes_label"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/remark"
            android:src="@drawable/icon_red_packet" />

    </LinearLayout>

    <TextView
        android:id="@+id/prompt_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="4dp"
        android:text="@string/prompt_logo_red"
        android:textColor="@color/textcolor3"
        android:textSize="9.5sp" />

</LinearLayout>