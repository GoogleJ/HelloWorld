<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flContent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/viewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_newlogin"
            android:layout_gravity="center"
            android:transitionName="appicon"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:id="@+id/llIcon"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat1"
                app:lottie_rawRes="@raw/mochat1"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat2"
                app:lottie_rawRes="@raw/mochat2"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat3"
                app:lottie_rawRes="@raw/mochat3"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat4"
                app:lottie_rawRes="@raw/mochat4"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat5"
                app:lottie_rawRes="@raw/mochat5"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavMochat6"
                app:lottie_rawRes="@raw/mochat6"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
