<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@color/m_add_friend_wechat_label_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:id="@+id/llBottom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCurrentCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phonefilexml_selectedfile"
                android:textColor="@color/textColor6" />

            <Button
                android:id="@+id/bt_send_file"
                android:layout_width="66dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_theme2"
                android:foreground="?selectableItemBackgroundBorderless"
                android:text="@string/m_verification_send_btn"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>