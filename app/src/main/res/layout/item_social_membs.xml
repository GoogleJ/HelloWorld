<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="48dp"
    android:layout_height="48dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMemberHead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="#e5e5e5"
        app:civ_border_color="#eec200"
        app:civ_border_width="1dp" />

    <ImageView
        android:id="@+id/ivOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="0.6dp"
        android:layout_marginEnd="0.6dp"
        android:rotation="6"
        android:src="@drawable/ic_social_owner" />

    <TextView
        android:id="@+id/tvMore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_dot_theme"
        android:gravity="center"
        android:text="+356"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone" />

</FrameLayout>