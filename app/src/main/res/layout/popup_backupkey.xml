<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/shape_bac_white_conor3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/wallet_manage_detail_tips4"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_backup_key_warning"
        android:lineSpacingExtra="4dp"
        android:padding="12dp"
        android:text="@string/backup_key_tips1"
        android:textColor="#DA6363" />

    <TextView
        android:id="@+id/tvKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_f1f1f1_2"
        android:lineSpacingExtra="4dp"
        android:padding="12dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_theme1"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="@string/copy"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>