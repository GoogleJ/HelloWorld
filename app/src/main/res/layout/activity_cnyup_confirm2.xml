<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.walletpage.CNYUpConfirm2Activity">

    <include layout="@layout/layout_title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_f4f4f4_3"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@null"
            android:gravity="start"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="4dp"
            android:maxLength="200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end">

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#6D7278"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/200"
                android:textColor="#6D7278"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="@string/upload_sign"
        android:textColor="#272E3F"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivSign"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:onClick="upload"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_upload_pic" />

    <Button
        style="@style/BtnStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="done"
        android:text="@string/upload"
        android:textSize="17sp" />

</LinearLayout>