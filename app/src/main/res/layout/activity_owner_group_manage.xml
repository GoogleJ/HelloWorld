<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.msgpage.OwnerGroupManageActivity">

    <include layout="@layout/layout_title_back" />

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <TextView
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textColor="#9EA0A4"
        android:layout_marginTop="10dp"
        android:text="@string/mute"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/mute_all"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchMuteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:onClick="muteManage"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/mute_manage"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_mine_rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <TextView
        android:paddingStart="16dp"
        android:textColor="#9EA0A4"
        android:layout_marginTop="10dp"
        android:text="@string/new_enter_group"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:onClick="newRedPackage"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/new_redpackage_manage"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="10dp"
            android:textColor="#9EA0A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_mine_rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:onClick="payEnterGroup"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/pay_enter_group"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="10dp"
            android:textColor="#9EA0A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_mine_rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="0.5dp" />

    <TextView
        android:paddingStart="16dp"
        android:textColor="#9EA0A4"
        android:layout_marginTop="10dp"
        android:text="@string/daily_manage"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/cant_addfriend"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:onClick="watchSetting"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:textSize="16sp"
            android:text="@string/cant_see"
            android:textColor="@color/textcolor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/cant_see_tip"
            android:layout_marginEnd="10dp"
            android:textColor="#9EA0A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_mine_rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="0.5dp" />

</LinearLayout>