<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_constacts_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFirstLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F3F5"
        android:paddingStart="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="A"
        android:textColor="@color/textColor6"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackgroundBorderless"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/m_constants_header_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chatme" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/iv"
            android:layout_toEndOf="@id/m_constants_header_icon"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/m_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textcolor1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_singture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/text_color2"
                android:textSize="13.5sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>