<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bac_white_conor5">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="28dp"
            android:paddingBottom="16dp"
            android:textColor="#272E3F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:padding="8dp"
            android:src="@drawable/ic_delete_dialog_right"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:textColor="#272E3F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bac_white_conor7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_cancel"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#272E3F"
            android:textSize="15.5sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCommit"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_confirm"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/color3"
            android:textSize="15.5sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>