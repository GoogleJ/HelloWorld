<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/enter_pay_pwd"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <com.zxjk.moneyspace.ui.widget.PayPsdInputView
            android:id="@+id/pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:divideLineColor="@color/black"
            app:focusedColor="#272E3F"
            app:psdType="weChat"
            app:radius="6dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropdownLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_keyboard_click"
        android:clickable="true"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_dropdown" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:divider="@drawable/divider_keyboard_vertical"
        android:orientation="vertical"
        android:showDividers="end|beginning|middle"
        android:stretchColumns="0,1,2">

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button01"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="1"
                android:textSize="24sp" />

            <Button

                android:id="@+id/button02"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button03"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="3"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="1dp"
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button04"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button05"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button06"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="6"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="1dp"
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button07"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button08"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button09"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="9"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="1dp"
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click_dark"

                android:textSize="24sp" />

            <Button
                android:id="@+id/button00"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="0"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/buttonCross"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click_dark"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/huisa" />

        </TableRow>

    </TableLayout>

</LinearLayout>
