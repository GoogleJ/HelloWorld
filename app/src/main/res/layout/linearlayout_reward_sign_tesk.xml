<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_sign">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/img_reward_task_ic"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reward_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reward_task_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor3" />
            </LinearLayout>

            <TextView
                android:id="@+id/ic_reward_receive_tack"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="@string/receive2"
                android:background="@drawable/reward_receive_tack"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_reward_receive_usdt"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/ic_reward_receive_tack2"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="@string/receive1"
                android:background="@drawable/reward_receive_tack2"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="#F5F6FA"
            android:layout_marginStart="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/tv_reward_task_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_reward_task_go"
                android:text="@string/go_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_teskrightarrow"
                android:drawablePadding="4dp"
                android:layout_marginEnd="16dp"
                android:textColor="#0083BF"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>