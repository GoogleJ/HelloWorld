<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-10dp"
    android:paddingEnd="14dp">

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="160dp"
        android:background="@drawable/ic_msg_popwindow_bg"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="6dp">

        <RelativeLayout
            android:id="@+id/ic_social_end_pop1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_groupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_social_end_pop1"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_groupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_groupChat"
                android:text="@string/ic_social_end_pop1"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_alignStart="@+id/tv_groupChat"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ic_social_end_pop2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_inviteFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_social_end_pop2"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_inviteFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_inviteFriends"
                android:text="@string/ic_social_end_pop2"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignStart="@+id/tv_inviteFriends"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ic_social_end_pop3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_social_end_pop3"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_scan"
                android:text="@string/ic_social_end_pop3"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_alignStart="@+id/tv_scan"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>