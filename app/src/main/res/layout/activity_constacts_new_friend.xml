<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/address_list"
        android:textColor="@color/msgTitle"
        android:textSize="19sp"
        android:textStyle="bold" />

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/m_contact_search_edit_1"
            style="@style/SearchStyle"
            android:gravity="center_vertical"
            android:hint="@string/search" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_contract_head"
            layout="@layout/layout_contract_head" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/layout_contract_head"
            android:id="@+id/m_contact_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <com.zxjk.duoduo.ui.msgpage.widget.IndexView
            android:id="@+id/index_view"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/m_constacts_dialog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/nim_contact_hit_letter_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>