<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.wallet.ImprovePaymentInformationActivity">

    <include layout="@layout/layout_title_back" />

    <LinearLayout
        android:id="@+id/ll_we_chat_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_wechatpay"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="微信支付"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_we_chat_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_end"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="123123" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:id="@+id/ll_ali_pay_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_alipay"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_ali_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_end"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="123123" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:id="@+id/ll_bank_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_bankpay"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="银行卡"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bank_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_end"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="123123" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:id="@+id/ll_phone_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="订单处理信息"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_end"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="123123" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/exclamation_mark"
        android:drawablePadding="6dp"
        android:gravity="top"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="为了保证订单尽快交易，请完善所有的收款信息，并确认所填
信息的正确性。"
        android:textColor="#8EA0AC" />
</LinearLayout>