<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_card_send_layout"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_business_card_user"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll1_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_card_title"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/news_card_icon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/news_card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:lines="2"
                    android:text="@string/tips_wechatcast_card"
                    android:textColor="@color/textColor9"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll1_card"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/ll_hilamg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/wechat_cast"
                android:textColor="@color/m_add_friend_wechat_label_2"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
