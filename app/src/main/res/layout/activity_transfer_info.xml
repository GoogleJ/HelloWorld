<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat">

    <include layout="@layout/layout_title_back" />


    <ImageView
        android:id="@+id/m_transfer_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:src="@drawable/icon_pending" />

    <TextView
        android:id="@+id/m_transfer_info_pending_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="@string/m_transfer_info_pending_payment_text"
        android:textColor="@color/login_bg"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:id="@+id/m_transfer_info_money_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/m_red_envelopes_money_text"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/m_transfer_info_unit_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="4dp"
            android:text="@string/m_red_envelopes_unit_label"
            android:textColor="@color/m_red_envelopes_unit_text"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/m_transfer_info_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/shape_circular_bead_btn"
        android:gravity="center"
        android:text="@string/m_transfer_info_commit_btn"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/m_transfer_info_caveat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvZhuanZhangTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/textcolor3" />

        <TextView
            android:id="@+id/tvShouKuanTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor3" />

    </LinearLayout>

</LinearLayout>