<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.msgpage.OwnerGroupAuthorityActivity">

    <include layout="@layout/layout_title_back" />

    <View
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="0.5dp" />

    <TextView
        android:layout_marginStart="4dp"
        android:padding="12dp"
        android:text="@string/managerList"
        android:textColor="@color/textcolor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:background="@color/white"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="176dp" />

    <LinearLayout
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/live_authority"
            android:padding="12dp"
            android:textColor="@color/textcolor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/textcolor1"
                android:text="@string/audo_live"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/sw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/textcolor1"
                android:text="@string/video_live"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/sw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

    </LinearLayout>

    <LinearLayout
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/groupmanage_authority"
            android:padding="12dp"
            android:textColor="@color/textcolor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/textcolor1"
                android:text="@string/mute_manage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/sw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/textcolor1"
                android:text="@string/see_manage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/sw4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

    </LinearLayout>

    <Button
        android:onClick="save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_circular_bead_btn1"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>